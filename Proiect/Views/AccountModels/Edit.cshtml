@model DataLibrary.Models.AccountModel

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-lg-12 text-center">
            <p><h2>Edit Account</h2></p>
        </div>
    </div>
</div>

<div class="container">
